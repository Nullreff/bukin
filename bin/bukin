#!/usr/bin/env ruby

$LOAD_PATH.unshift(File.expand_path('../lib', File.dirname(__FILE__)))

require 'bukin'

begin
  Bukin::CLI.start
rescue => ex
  if ex.class == SocketError
    say ex.message
    abort 'Check that you have a stable connection and the service is online'
  elsif ex.class == Errno::ENOENT
    abort ex.message
  else
    raise ex
  end
end
